{
    "comments": {
        "lineComment": "'"
    },
    "brackets": [
        [
            "(",
            ")"
        ],
        [
            "[",
            "]"
        ]
    ],
    "autoClosingPairs": [
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string",
                "comment"
            ]
        }
    ],
    "surroundingPairs": [
        [
            "(",
            ")"
        ],
        [
            "[",
            "]"
        ],
        [
            "\"",
            "\""
        ]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(?i:(SUB|FUNCTION|TYPE|SELECT CASE|FOR|DO|WHILE|IF))\\b",
            "end": "^\\s*(?i:(END (SUB|FUNCTION|TYPE|SELECT)|NEXT|LOOP|WEND|END IF))\\b"
        }
    },
    "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+[\\%\\&\\!\\#\\$]?)"
}