{
    "name": "qbasic-nexus",
    "displayName": "QBasic Nexus",
    "description": "Modern QBasic/QB64 support for VS Code with IntelliSense, linting, formatting, and visualization.",
    "version": "1.0.2",
    "publisher": "thirawat27",
    "author": "Thirawat27",
    "license": "MIT",
    "icon": "image/QBasicNexus.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/thirawat27/QBasic-Nexus"
    },
    "bugs": {
        "url": "https://github.com/thirawat27/QBasic-Nexus/issues"
    },
    "homepage": "https://github.com/thirawat27/QBasic-Nexus#readme",
    "engines": {
        "vscode": "^1.60.0"
    },
    "main": "./extension.js",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "pretest": "npm run lint",
        "test": "vscode-test",
        "package": "vsce package",
        "publish": "vsce publish"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "25.x",
        "@types/vscode": "^1.107.0",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2",
        "eslint": "^9.39.2"
    },
    "dependencies": {},
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters",
        "Linters"
    ],
    "keywords": [
        "qbasic",
        "quickbasic",
        "qb64",
        "basic",
        "retro",
        "compiler",
        "programming",
        "ide"
    ],
    "activationEvents": [
        "onLanguage:qbasic"
    ],
    "contributes": {
        "languages": [
            {
                "id": "qbasic",
                "aliases": [
                    "QBasic",
                    "QuickBASIC",
                    "QB64"
                ],
                "extensions": [
                    ".bas",
                    ".bi",
                    ".bm",
                    ".inc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "qbasic-nexus.compile",
                "title": "QBasic: Compile ðŸ”¨",
                "icon": "$(tools)"
            },
            {
                "command": "qbasic-nexus.compileAndRun",
                "title": "QBasic: Compile & Run ðŸŒ€",
                "icon": "$(play)"
            },
            {
                "command": "qbasic-nexus.runInCrt",
                "title": "QBasic: Run in Retro CRT ðŸ“º",
                "icon": "$(device-desktop)"
            },
            {
                "command": "qbasic-nexus.startTutorial",
                "title": "QBasic: Start Interactive Tutorial ðŸŽ®",
                "icon": "$(mortar-board)"
            },
            {
                "command": "qbasic-nexus.showCodeStats",
                "title": "QBasic: Show Code Statistics ðŸ“Š",
                "icon": "$(graph)"
            },
            {
                "command": "qbasic-nexus.toggleComment",
                "title": "QBasic: Toggle Comment ðŸ’¬",
                "icon": "$(comment)"
            },
            {
                "command": "qbasic-nexus.extractToSub",
                "title": "QBasic: Extract to SUB ðŸ“¦",
                "icon": "$(symbol-method)"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "qbasic-nexus.compile",
                    "when": "resourceLangId == qbasic",
                    "group": "1_qbasic@1"
                },
                {
                    "command": "qbasic-nexus.compileAndRun",
                    "when": "resourceLangId == qbasic",
                    "group": "1_qbasic@2"
                },
                {
                    "command": "qbasic-nexus.runInCrt",
                    "when": "resourceLangId == qbasic",
                    "group": "1_qbasic@3"
                },
                {
                    "command": "qbasic-nexus.startTutorial",
                    "when": "resourceLangId == qbasic",
                    "group": "1_qbasic@4"
                },
                {
                    "command": "qbasic-nexus.toggleComment",
                    "when": "resourceLangId == qbasic && editorHasSelection",
                    "group": "1_qbasic@3"
                },
                {
                    "command": "qbasic-nexus.extractToSub",
                    "when": "resourceLangId == qbasic && editorHasSelection",
                    "group": "1_qbasic@4"
                }
            ],
            "editor/title": [
                {
                    "command": "qbasic-nexus.compileAndRun",
                    "when": "resourceLangId == qbasic",
                    "group": "navigation"
                },
                {
                    "command": "qbasic-nexus.runInCrt",
                    "when": "resourceLangId == qbasic",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "qbasic-nexus.compileAndRun",
                "key": "f5",
                "when": "resourceLangId == qbasic"
            },
            {
                "command": "qbasic-nexus.compile",
                "key": "ctrl+shift+b",
                "when": "resourceLangId == qbasic"
            },
            {
                "command": "qbasic-nexus.toggleComment",
                "key": "ctrl+/",
                "when": "resourceLangId == qbasic && editorTextFocus"
            },
            {
                "command": "qbasic-nexus.showCodeStats",
                "key": "ctrl+shift+i",
                "when": "resourceLangId == qbasic"
            }
        ],
        "grammars": [
            {
                "language": "qbasic",
                "scopeName": "source.qbasic",
                "path": "./syntaxes/qbasic.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "qbasic",
                "path": "./snippets/qbasic.json"
            }
        ],
        "configuration": {
            "title": "QBasic Nexus",
            "properties": {
                "qbasic-nexus.compilerPath": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "markdownDescription": "Full path to your **QB64** executable.\n\n**Examples:**\n- Windows: `C:\\QB64\\qb64.exe`\n- macOS: `/Applications/QB64/qb64`\n- Linux: `~/qb64/qb64`\n\nLeave empty for auto-detection.",
                    "scope": "machine"
                },
                "qbasic-nexus.compilerMode": {
                    "type": "string",
                    "enum": [
                        "QB64 (Recommended)",
                        "Internal (JS Transpiler)"
                    ],
                    "enumDescriptions": [
                        "Compile with QB64 for native executable (best performance)",
                        "Transpile to JavaScript and run via Node.js (backup mode)"
                    ],
                    "default": "QB64 (Recommended)",
                    "markdownDescription": "Select the compilation mode.",
                    "scope": "resource"
                },
                "qbasic-nexus.compilerArgs": {
                    "type": "string",
                    "default": "",
                    "markdownDescription": "Additional arguments for the QB64 compiler.\n\n**Examples:** `-w` (warnings), `-g` (debug)",
                    "scope": "resource"
                },
                "qbasic-nexus.enableLinting": {
                    "type": "boolean",
                    "default": true,
                    "markdownDescription": "Enable real-time syntax checking and error highlighting.",
                    "scope": "resource"
                },
                "qbasic-nexus.lintDelay": {
                    "type": "number",
                    "default": 500,
                    "minimum": 100,
                    "maximum": 3000,
                    "markdownDescription": "Delay in milliseconds before linting after typing stops. Lower values = faster feedback but more CPU usage.",
                    "scope": "resource"
                },
                "qbasic-nexus.autoFormatOnSave": {
                    "type": "boolean",
                    "default": false,
                    "markdownDescription": "Automatically format the document when saving.",
                    "scope": "resource"
                }
            }
        }
    }
}