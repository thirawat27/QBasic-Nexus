{
  "name": "qbasic-nexus",
  "displayName": "QBasic Nexus",
  "description": "Add syntax highlighting, code snippets, and a QB64 compiler for QBasic in VSCode.",
  "version": "0.0.1",
  "publisher": "thirawat27",
  "icon": "image/QBasicNexus.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/thirawat27/qbasic-nexus"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "main": "./extension.js",
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:QBLegacy.compile",
    "onCommand:QBLegacy.compileAndRun",
    "onLanguage:qbasic"
  ],
  "contributes": {
    "languages": [
      {
        "id": "qbasic",
        "aliases": ["QuickBASIC", "qbasic"],
        "extensions": [".bas", ".bi"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "QBLegacy.compile",
        "title": "Compile .BAS file ðŸŒ€ (QBasic)"
      },
      {
        "command": "QBLegacy.compileAndRun",
        "title": "Compile and Run .BAS file ðŸš€ (QBasic)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "resourceLangId == qbasic",
          "command": "QBLegacy.compile",
          "group": "navigation@1"
        },
        {
          "when": "resourceLangId == qbasic",
          "command": "QBLegacy.compileAndRun",
          "group": "navigation@2"
        }
      ]
    },
    "grammars": [
      {
        "language": "qbasic",
        "scopeName": "source.qbasic",
        "path": "./syntaxes/qbasic.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "qbasic",
        "path": "./snippets/qbasic.json"
      }
    ]
  }
}